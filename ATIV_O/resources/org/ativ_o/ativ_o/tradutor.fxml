<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.ativ_o.ativ_o.TradutorController" spacing="10" alignment="CENTER" padding="20">
    <Text>Tradutor Inglês-Português</Text>
    <TextField fx:id="textoIngles" promptText="Digite a palavra em inglês" />
    <Button fx:id="traduzirButton" text="Traduzir" onAction="#traduzir" />
    <Text fx:id="resultadoTraducao" />
</VBox>
